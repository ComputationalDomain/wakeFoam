FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     pimpleFoam;

libs ("libwakeFoam.so");

startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         50.0;

deltaT          0.005;

writeControl	adjustableRunTime;
writeInterval	0.1;
//writeControl timeStep;
//writeInterval 1;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable yes;

adjustTimeStep  yes;

maxCo           0.7;

